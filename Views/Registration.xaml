<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:NCD.Converters"
             x:Class="NCD.Views.Registration"
             Title="Registration"
             BackgroundColor="White">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid>
            <StackLayout Padding="20" Spacing="5">

                <!-- Name of the Person -->
                <Label Text="Name of the Person" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Border Padding="0" 
                        Stroke="LightGray" 
                        StrokeThickness="1"
                        Margin="0,0,0,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Entry Text="{Binding Registration.NameofthePerson}" 
                           Placeholder="Enter full name" 
                           Margin="10,0"
                           HeightRequest="40"
                           FontSize="14"/>
                </Border>
                <Label Text="{Binding NameError}" 
                       TextColor="Red" 
                       FontSize="12"
                       Margin="0,0,0,2"
                       IsVisible="{Binding NameError, Converter={StaticResource StringNotEmptyConverter}}" />

                <!-- Father/Husband Name -->
                <Label Text="Father/Husband Name" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Border Padding="0" 
                        Stroke="LightGray" 
                        StrokeThickness="1"
                        Margin="0,0,0,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Entry Text="{Binding Registration.FatherName}" 
                           Placeholder="Enter father/husband name" 
                           Margin="10,0"
                           HeightRequest="40"
                           FontSize="14"/>
                </Border>
                <Label Text="{Binding FatherHusbandNameError}" 
                       TextColor="Red" 
                       FontSize="12"
                       Margin="0,0,0,2"
                       IsVisible="{Binding FatherHusbandNameError, Converter={StaticResource StringNotEmptyConverter}}" />

                <!-- Age -->
                <Label Text="Age" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Border Padding="0" 
                        Stroke="LightGray" 
                        StrokeThickness="1"
                        Margin="0,0,0,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Entry Text="{Binding Registration.Age}" 
                           Placeholder="0" 
                           Keyboard="Numeric" 
                           Margin="10,0"
                           HeightRequest="40"
                           FontSize="14"/>
                </Border>
                <Label Text="{Binding AgeError}" TextColor="Red" FontSize="Small"
                   IsVisible="{Binding AgeError, Converter={StaticResource StringNotEmptyConverter}}" />

                <!-- Gender -->
                <Label Text="Gender" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Border Padding="0" 
                        Stroke="LightGray" 
                        StrokeThickness="1"
                        Margin="0,0,0,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Picker Title="Select" 
                            ItemsSource="{Binding Genders}" 
                            ItemDisplayBinding="{Binding Text}"
                            SelectedItem="{Binding Registration.Gender}"
                            Margin="10,0"
                            HeightRequest="40"
                            FontSize="14"/>
                </Border>
                <Label Text="{Binding GenderError}" TextColor="Red" FontSize="Small"
                   IsVisible="{Binding GenderError, Converter={StaticResource StringNotEmptyConverter}}" />

                <!-- Marital Status -->
                <Label Text="Marital Status" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Border Padding="0" 
                        Stroke="LightGray" 
                        StrokeThickness="1"
                        Margin="0,0,0,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Picker Title="Select" 
                            ItemsSource="{Binding Marital}" 
                            ItemDisplayBinding="{Binding Text}"
                            SelectedItem="{Binding Registration.MaritalStatus}"
                            Margin="10,0"
                            HeightRequest="40"
                            FontSize="14"/>
                </Border>
                <Label Text="{Binding MaritalStatusError}" TextColor="Red" FontSize="Small"
                   IsVisible="{Binding MaritalStatusError, Converter={StaticResource StringNotEmptyConverter}}" />

                <!-- Telephone No -->
                <Label Text="Telephone No" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Border Padding="0" 
                        Stroke="LightGray" 
                        StrokeThickness="1"
                        Margin="0,0,0,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Entry Text="{Binding Registration.TelephoneNo}" 
                           Placeholder="Enter telephone number" 
                           Keyboard="Telephone" 
                           Margin="10,0"
                           HeightRequest="40"
                           FontSize="14"/>
                </Border>
                <Label Text="{Binding TelephoneNoError}" TextColor="Red" FontSize="Small"
                   IsVisible="{Binding TelephoneNoError, Converter={StaticResource StringNotEmptyConverter}}" />

                <!-- Address -->
                <Label Text="Address" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Border Padding="0" 
                        Stroke="LightGray" 
                        StrokeThickness="1"
                        Margin="0,0,0,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Editor Text="{Binding Registration.Address}" 
                            Placeholder="Enter address" 
                            HeightRequest="80"
                            AutoSize="TextChanges"
                            Margin="10,5"
                            FontSize="14"/>
                </Border>

                <!-- District -->
                <Label Text="District" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Border Padding="0" 
                        Stroke="LightGray" 
                        StrokeThickness="1"
                        Margin="0,0,0,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Picker Title="Select District" 
                            ItemsSource="{Binding Districts}" 
                            ItemDisplayBinding="{Binding Text}"
                            SelectedItem="{Binding Registration.District}"
                            SelectedIndexChanged="DistrictPicker_SelectedIndexChanged"
                            Margin="10,0"
                            HeightRequest="40"
                            FontSize="14"/>
                </Border>
                <Label Text="{Binding DistrictError}" TextColor="Red" FontSize="Small"
                       IsVisible="{Binding DistrictError, Converter={StaticResource StringNotEmptyConverter}}" />

                <!-- Block -->
                <Label Text="Block" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Border Padding="0" 
                        Stroke="LightGray" 
                        StrokeThickness="1"
                        Margin="0,0,0,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Picker Title="Select Block" 
                            ItemsSource="{Binding Blocks}" 
                            ItemDisplayBinding="{Binding Text}"
                            SelectedItem="{Binding Registration.Block}"
                            SelectedIndexChanged="BlockPicker_SelectedIndexChanged"
                            Margin="10,0"
                            HeightRequest="40"
                            FontSize="14"/>
                </Border>
                <Label Text="{Binding BlockError}" TextColor="Red" FontSize="Small"
                       IsVisible="{Binding BlockError, Converter={StaticResource StringNotEmptyConverter}}" />

                <!-- Village -->
                <Label Text="Village" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Border Padding="0" 
                        Stroke="LightGray" 
                        StrokeThickness="1"
                        Margin="0,0,0,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Picker Title="Select Village" 
                            ItemsSource="{Binding Villages}" 
                            ItemDisplayBinding="{Binding Text}"
                            SelectedItem="{Binding Registration.Village}"
                            Margin="10,0"
                            HeightRequest="40"
                            FontSize="14"/>
                </Border>
                <Label Text="{Binding VillageError}" TextColor="Red" FontSize="Small"
                       IsVisible="{Binding VillageError, Converter={StaticResource StringNotEmptyConverter}}" />

                <!-- Type of Key and Vulnerable Population -->
                <Label Text="Type of Key and Vulnerable Population" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Border Padding="0" 
                        Stroke="LightGray" 
                        StrokeThickness="1"
                        Margin="0,0,0,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Picker Title="Select" 
                            ItemsSource="{Binding KeyVulPopulation}" 
                            ItemDisplayBinding="{Binding Text}"
                            SelectedItem="{Binding Registration.KeyVulPopulation}"
                            Margin="10,0"
                            HeightRequest="40"
                            FontSize="14"/>
                </Border>
                <Label Text="{Binding KeyPopulationTypeError}" TextColor="Red" FontSize="Small"
                   IsVisible="{Binding KeyPopulationTypeError, Converter={StaticResource StringNotEmptyConverter}}" />

                <!-- Occupation -->
                <Label Text="Occupation" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Border Padding="0" 
                        Stroke="LightGray" 
                        StrokeThickness="1"
                        Margin="0,0,0,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5"/>
                    </Border.StrokeShape>
                    <Picker Title="Select Occupation" 
                            ItemsSource="{Binding Occupations}" 
                            ItemDisplayBinding="{Binding Text}"
                            SelectedItem="{Binding Registration.Occupation}"
                            Margin="10,0"
                            HeightRequest="40"
                            FontSize="14"/>
                </Border>

                <!-- Buttons -->
                <StackLayout Orientation="Horizontal" 
                           HorizontalOptions="Center" 
                           Spacing="20" 
                           Margin="0,10,0,0">
                    <Button Text="Submit" 
                            Command="{Binding SubmitCommand}"
                            BackgroundColor="#3498db"
                            TextColor="White"
                            WidthRequest="120"
                            HeightRequest="40"
                            CornerRadius="5" />

                    <Button Text="Reset" 
                            Command="{Binding ResetCommand}"
                            BackgroundColor="#e74c3c"
                            TextColor="White"
                            WidthRequest="120"
                            HeightRequest="40"
                            CornerRadius="5" />
                </StackLayout>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>